<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
<StackLayout class="body">
	<StackLayout class="calc">
        <label class="calc_result" id="result"></label>

        <button type="button" text="7" class="calc_btn"></button>
        <button type="button" text="8" class="calc_btn"></button>
        <button type="button" text="9" class="calc_btn"></button>
        <button type="button" text="+" class="calc_btn calc_btn_operator"></button>

        <button type="button" text="4" class="calc_btn"></button>
        <button type="button" text="5" class="calc_btn"></button>
        <button type="button" text="6" class="calc_btn"></button>
        <button type="button" text="-" class="calc_btn calc_btn_operator"></button>

        <button type="button" text="1" class="calc_btn"></button>
        <button type="button" text="2" class="calc_btn"></button>
        <button type="button" text="3" class="calc_btn"></button>
        <button type="button" text="*" class="calc_btn calc_btn_operator"></button>

        <button type="button" text="0" class="calc_btn"></button>
        <button type="button" text="." class="calc_btn"></button>
        <button type="button" text="00" class="calc_btn"></button>
        <button type="button" text="/" class="calc_btn calc_btn_operator"></button>

        <button type="button" text="C" class="calc_btn calc_btn_reset"></button>
        <button type="button" text="=" class="calc_btn calc_btn_equal"></button>
    </StackLayout>
</StackLayout>
</Page>
